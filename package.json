{
    "name": "ts-workbench",
    "version": "0.0.1",
    "description": "TypeScript workbench",
    "author": "Jesse Chen",
    "keywords": [
        "typescript"
    ],
    "repository": "github:jesseminn/ts-workbench",
    "license": "ISC",
    "exports": {
        "./*": {
            "require": "./dist/*/index.js",
            "import": "./dist/*/index.js",
            "types": "./dist/@types/*/index.d.ts"
        }
    },
    "files": [
        "./dist/**/*"
    ],
    "scripts": {
        "dev": "tsx watch index.ts",
        "build": "rm -rf ./dist && npx --yes tsc",
        "prepare": "[ ! -d '.git' ] && npm run build || husky",
        "test": "jest",
        "test:watch": "jest --watch",
        "format": "prettier . --write --ignore-path .gitignore",
        "format:watch": "onchange \"**/*\" -- prettier {{changed}} --write --ignore-path .gitignore --ignore-unknown",
        "type-check": "tsc --noEmit",
        "type-check:watch": "tsc --watch"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.9",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.7",
        "onchange": "^7.1.0",
        "prettier": "3.3.2",
        "ts-jest": "^29.1.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.16.0",
        "typescript": "^5.5.2"
    },
    "typesVersions": {
        "*": {
            "*": [
                "./dist/@types/*/index.d.ts"
            ]
        }
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown",
        "**/*.{js,jsx,ts,tsx}": "jest --bail --findRelatedTests --passWithNoTests"
    }
}
